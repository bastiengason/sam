<div class="fullscroll">
  <div class="hero-banner">
    <h1>My account</h1>
  </div>
  <div class="form-down">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, label: false,  autofocus: true, placeholder: "Email" %>
        <%= f.input :name, label: false,  autofocus: true, placeholder: "Name" %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :current_password, label: false, placeholder: "Current password", required: true,  autofocus: true %>
        <%= f.input :password, autocomplete: "off", label: false, placeholder: "New password", required: false,  autofocus: true  %>
        <%= f.input :password_confirmation, label: false, required: false, placeholder: "Confirm new password",  autofocus: true %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Update", :class =>"btn-form" %>
      </div>
    <% end %>

    <div class="section lg text-center">
      <h4>Danger zone</h4>
      <p class="btn btn-default btn-form">
        <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'btn-link' %>
      </p>

      <p class="btn btn-default btn-form">
        <%= link_to "Logout", destroy_user_session_path, :method => :delete, :class => 'btn-link' %>
      </p>
    </div>
  </div>
</div>

<div class="form-positon flexbox vertical-center">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

     <div class="form-inputs text-center">
      <%= f.input :email, required: true, label: false,  autofocus: true, placeholder: "Email" %>
      <%= f.input :password, required: true, label: false, placeholder: "Password" %>
      <%= f.input :password_confirmation, required: true, label: false, placeholder: "Confirm password" %>
    </div>

    <div class="form-actions text-center">
     <%= f.button :submit, "Sign up", :class => "btn-form" %>
    </div>
  <% end %>
  <div class="or-login text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>




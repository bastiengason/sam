<div class="hero-banner">
  <h1 class="greeting"><%= greet %> <%= current_user.user_name %>!</h1>
</div>
<div class="container">
  <% current_user.categories.each do |category| %>
  <div class="category">
    <h4><%= link_to category.name, dashboard_category_path(category) %></h4>
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: <%= current_user.category_score(category) %>%; background-color: <%= current_user.score_color(category) %>;">
        <%= current_user.category_score(category) %>%
      </div>
    </div>
  </div>
  <% end %>
  <%= link_to "Back", dashboard_index_path, class: 'btn btn-primary' %>
</div>


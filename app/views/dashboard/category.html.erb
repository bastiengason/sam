<div class="hero-banner">
  <h2><%= @category.name.capitalize %></h2>
</div>

<div class="container">
  <div class="tasks">
    <% current_user.tasks.where(category: @category).each do |task| %>
    <div class="task">
      <h4><%= task.name %></h4>
      <div class="progress">
        <div class="progress-bar <%= task.score_color %>" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: <%= task.score %>%;">
          <%= task.score %>%
        </div>
      </div>
      <p><%= task.motivation_sentence %></p>
    </div>
    <% end %>
    <div class="text-center">
      <%= image_tag current_user.evolution %>
    </div>
  </div>

  <%= link_to dashboard_categories_path, class: 'btn btn-default' do %>
    <i class="fa fa-chevron-left"></i>
    Back
  <% end %>
</div>

<div class="container" style="width: 320px;">
  <h2 class="text-center"><%= @category.name.capitalize %></h2>

  <% current_user.tasks.where(category: @category).each do |task| %>
    <div class="task">
    <h4><%= task.name %></h4>
    <div class="progress">
      <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: <%= task.score %>%; background-color: <%= task.score_color %>;">
        <%= task.score %>%
      </div>
    </div>
    <p style="font-size: 12px;"><%= task.motivation_sentence %></p>
  </div>
  <% end %>

</div>


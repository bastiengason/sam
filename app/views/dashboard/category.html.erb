<div class="hero-banner">
  <h2><%= @category.name.capitalize %></h2>
</div>

<div class="container" style="width: 320px;">

  <div class="tasks">
    <% current_user.tasks.where(category: @category).each do |task| %>
    <div class="task">
      <h4><%= task.name %></h4>
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: <%= task.score %>%; background-color: <%= task.score_color %>;">
          <%= task.score %>%
        </div>
      </div>
      <p><%= task.motivation_sentence %></p>
    </div>
    <% end %>
    <div class="growing_pic">
      <%= image_tag current_user.evolution %>
    </div>
  </div>
  <btn class="button"><%= link_to "Back", dashboard_categories_path %></btn>
</div>

<div class="container">
<h1>Profile#edit</h1>
<%= simple_form_for current_user, url: profile_path, method: :put do |f| %>
  <%= f.input :name %>
  <%= f.button :submit %>
<% end %>
<%#= link_to "Back", profile_path %>
</div>

<h2>Change your password</h2>

<%= simple_form_for(current_user, url: password_path(current_user), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password" %>
  </div>
<% end %>


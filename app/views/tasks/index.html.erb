<div class="container">
<h1>Your habits so far</h1>

<ul>


<% @tasks.each do |task| %>
  <li><%= link_to task.name, task %></li>
<% end %>
</ul>

<form method="get" action="/tasks/new">
    <button class="btn btn-primary show-task-button" type="submit">Add a task</button>
</form>
</div>






